<?xml version="1.0" encoding="UTF-8"?>
<!-- 
  各配置元素名称不能重名，否则将覆盖;
  各配置元素名称已经与程序关联，不能修改！
 -->
<configs>

	<!-- 服务id号 -->
    <id>remoteServer</id>
	<!-- 对外提供服务的端口号 -->
    <port>4401</port>
	
	<!-- 
	     NioSocketAcceptor所应用的IoProcessor用数量，默认是CUP数+1
	 -->
	<processors>3</processors>
	<!-- 
	     网络联接读写空闲时长，超过时长认为通信结速(秒)
	 -->
	<idle>10</idle>
	<!-- 
	客户端与本服务器端TCP联接是否为长联接，如果为长联接则配置为true，否则配置为false ;
	 -->
	<connectForever>true</connectForever>
	
</configs>